{
  "pyright.enable": true,
  "python.analysis.typeCheckingMode": "off",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--ignore=E203", "--max-line-length=160"],
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=159"],
  "diagnostic.floatConfig": {
    "border": true,
    "rounded": true,
    "focusable": false
  },
  "suggest.floatConfig": {
    "border": true,
    "rounded": true
  },
  "signature.floatConfig": {
    "border": true,
    "rounded": true,
    "focusable": false
  },
  "hover.floatConfig": {
    "border": true,
    "rounded": true,
    "focusable": false
  },
  "eslint.enable": true,
  "eslint.autoFixOnSave": false,
  "Lua.diagnostics.globals": ["vim"],
  "typescript.suggestionActions.enabled": false,
  "javascript.suggestionActions.enabled": false
}
